<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" 
    android:id="@+id/mainActivity" android:background="@drawable/cloud" 
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgAnimal" android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_marginBottom="9dp"
        android:scaleType="fitCenter" android:layout_weight="1.0"
        android:layout_marginStart="15dp" android:layout_marginEnd="15dp" />
    <LinearLayout
        android:orientation="horizontal" android:id="@+id/firstRowLinearLayout"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:baselineAligned="false">
        <Button
            android:textSize="24sp" android:textColor="#ffff"
            android:id="@+id/btn1" android:background="@drawable/btn"
            android:padding="5dp" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_margin="2dp"
            android:lines="2"
            android:layout_weight="0.5" />
        <Button
            android:textSize="24sp" android:textColor="#ffff"
            android:id="@+id/btn2" android:background="@drawable/btn"
            android:padding="5dp" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_margin="5dp"
            android:lines="2"
            android:layout_weight="0.5" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal" android:id="@+id/secondRowLinearLayout"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:baselineAligned="false">
        <Button
            android:textSize="24sp"
            android:textColor="#ffff"
            android:id="@+id/btn3" android:background="@drawable/btn"
            android:padding="5dp" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_margin="5dp"
            android:lines="2"
            android:layout_weight="0.5" />
        <Button
            android:textSize="24sp" android:textColor="#ffff"
            android:id="@+id/btn4" android:background="@drawable/btn"
            android:padding="5dp" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_margin="5dp"
            android:text="Dragon ddd"
            android:lines="2"
            android:layout_weight="0.5" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/thirdRowLinearLayout" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:baselineAligned="false">
        <Button
            android:textSize="24sp" android:textColor="#ffff"
            android:id="@+id/btn5" android:background="@drawable/btn"
            android:padding="5dp"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="5dp" android:lines="2"
            android:layout_weight="0.5" />
        <Button
            android:textSize="24sp" android:textColor="#ffff"
            android:id="@+id/btn6"
            android:background="@drawable/btn" android:padding="5dp"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="5dp" android:lines="2"
            android:layout_weight="0.5" />
    </LinearLayout>
    <TextView
        android:textColor="#fff"
        android:id="@+id/Ans" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp" />

</LinearLayout>